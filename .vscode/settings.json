{
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "javascript.format.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [ ".js", ".ts", ".graphql", ".gql" ]
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "graphql"
  ]
}
